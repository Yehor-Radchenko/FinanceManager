@page "/categories"
@using System.Text.Json
@model FinanceManagerBlazorApp.Pages.CategoriesModel

<h1>Categories</h1>
<table>
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Type</td>
            </tr>
        }
    </tbody>
</table>


